<Window x:Class="BeARouter.SuccessCertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeARouter"
        mc:Ignorable="d"
        Title="SuccessCertificateWindow" Height="450" Width="363" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="textBlockMessage" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Congratulations! You have reached your goal of GOAL Below you will find your SuccessCertificate, which you can send to your instructor. " VerticalAlignment="Top" FontSize="18" TextAlignment="Center" Width="343"/>
        <TextBox x:Name="textBoxCert" HorizontalAlignment="Center" Margin="0,127,0,0" TextWrapping="WrapWithOverflow" Text="---------BEGIN SUCCESS CERTIFICATE---------" VerticalAlignment="Top" Width="343" Height="297" FontFamily="Courier New"/>


    </Grid>
</Window>
