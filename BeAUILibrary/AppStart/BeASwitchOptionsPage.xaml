<Page x:Class="BeAUILibrary.AppStart.BeASwitchOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeAUILibrary.AppStart"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="455"
      Title="BeASwitchOptionsPage">

    <Grid>
        <Label x:Name="label" Content="Welcome to BeASwitch" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="label1" Content="Choose to use VLAN simulation by marking the checkbox below" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxVLAN" Content="use VLAN" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonNext" Content="Next" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Height="30" Width="81" Click="buttonNext_Click"/>
    </Grid>
</Page>
